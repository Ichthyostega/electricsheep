#!/usr/bin/make -f
#
# Debian package definition for "Electric Sheep"
# by Ichthyostega <deb@ichthyostega.de>
#

include /usr/share/cdbs/1/rules/debhelper.mk
include /usr/share/cdbs/1/class/autotools.mk
include /usr/share/cdbs/1/rules/autoreconf.mk


# due to build problems on newer Linux distros
# https://aur.archlinux.org/packages/electricsheep/
# https://github.com/stefantalpalaru/gentoo-overlay/issues/26
# (not caused by a change in electricsheep, rather GL/glext.h )
CXXFLAGS+=-DGL_GLEXT_PROTOTYPES

# Linking fails with missing pthreads, starting with Ubuntu/Hirsute 21.04
# while the autoconf AX_PTHREAD macro succeds linking with not flag.
# Thus adding the flag explicitly here
LDFLAGS+=-lpthread

